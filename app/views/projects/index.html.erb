
<div class="container text-center text-success">
<p id="notice"><%= notice %></p>
</div>


<div class="jumbotron jumbotron-fluid text-wrap w-100">
  <div class="container text w-100">
    <p class="display-4 text-center project-title-font h1 text-light">All Projects Available</p>
  </div>
</div>

<br>

<section class="ftco-section">
  <div class="container">

<div class="container mx-auto mt-4">
<div class="row">
<% @projects.each do |project| %>

  <div class="col mb-4">

  <div class="card text-wrap" style="width: 20rem;">
  
    <div class="card-header text-center">
      <p class="text w-100 h3 text-light"><%= project.title %></p>
    </div>
    <div class="card-body">
      <p><%= project.description %></p>
      <p><small class="text-muted">By: @user</small></p>
    
      <% if user_signed_in? %>
        <div class="row">

          <div class="col-3">
            <%= link_to 'Show', project, class:"btn btn-white btn-outline-white rounded-pill" %>
          </div>

          <div class="col-3">
            <%= link_to 'Edit', edit_project_path(project), class:"btn btn-white btn-outline-white rounded-pill" %>
          </div>
          <div class="col align-self-center">
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'text-danger' %>
          </div>

        </div>  
      <% end %>
    </div>

    </div>
  </div>

    
<% end %>
</div>
</div>
</div>
</section>