<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
  </head>

<div class="container-fluid">
<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
  <div class="container-fluid">
    <a class="navbar-brand mb-0 h1" href="/projects.html">Portfolio</a>
  
      <div class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <%= link_to 'New Project', new_project_path, :class=>'nav-link active' %>
        <% end %>
      </div>
    

    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
          <%= link_to 'Edit profile', edit_user_registration_path, :class=>'nav-link active' %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class=>'nav-link active' %>
      <% end %>
    <ul>
  </div>
</nav>
</div>

<body>
  <%= yield %>
</body>
</html>
