<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
  </head>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

  <%= link_to root_path do %>
    <%= image_tag "book_logo.png", class: "d-inline-block align-top", width: "30", height: "30" %>
    <h4 class="text-light logo-font">Portfolio</h4>
  <% end %>
  
  
  <div class="navbar-nav mr-auto">
    <% if user_signed_in? %>
      <%= link_to 'New Project', new_project_path, :class=>'nav-link active' %>
    <% end %>
  </div>
    

  <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <%= link_to 'Edit profile', edit_user_registration_path, :class=>'nav-link active' %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class=>'nav-link active' %>
    <% end %>
  <ul>
  
</nav>


<body>
  <%= yield %>
</body>
</html>
