

<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
      </div>
    </div>


    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-10">
        <div class="wrap d-md-flex">
          <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
            <div class="text w-100">
              <h2>Welcome to login</h2>
              <p>Don't have an account?</p>
              <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-white btn-outline-white rounded-pill" %><br />
            </div>
          </div>

          <div class="login-wrap p-4 p-lg-5">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


            <div class="d-flex">
               <div class="w-100">
                <h3 class="mb-4">Sign In</h3>
              </div>

              <div class="w-100">
                <p class="social-media d-flex justify-content-end">
                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                </p>
              </div>

            </div>

            <div class="form-group mb-3">
              <%= f.label :email, class: "label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-pill" %>
            </div>

            <div class="form-group">
              <%= f.submit "Log in", class: "form-control btn btn-primary submit px-3 rounded-pill" %>
            </div>

            <div class="form-group d-md-flex">

              <div class=" text-left">
                <label class="checkbox-wrap checkbox-primary mb-0">Remember Me
                  <input type="checkbox" checked>
                  <span class="checkmark"></span>
                </label>
              </div>

              <div class="w-50 text-md-right">
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              </div>


            <% end %>
          </div>
            
        </div>


        
        </div>
      </div>
    </div>
  </div>
</section>
